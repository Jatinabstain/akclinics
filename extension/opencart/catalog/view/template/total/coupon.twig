<div class="account_heading">
  <h1>{{ heading_title }}</h1>
</div>
<form id="form-coupon" action="{{ save }}" method="post" data-oc-toggle="ajax" data-oc-load="{{ list }}" data-oc-target="#shopping-cart">
  <div class="form-group">
    <label for="input-coupon" class="form-label">{{ entry_coupon }}</label>
    <input type="text" name="coupon" value="{{ coupon }}" placeholder="{{ entry_coupon }}" id="input-coupon" class="form-control"/>
  </div>
  <div class="text-end"><button type="submit" class="btn btn_dark_outline w-100 text-capitalize mb-3">Redeem</button></div>
  <small class="text-muted">Terms & Conditions apply</small>
</form>