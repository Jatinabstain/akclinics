                              {% if thumb %}
                                <a href="{{ popup }}" title="{{ heading_title }}"><img src="{{ thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" class="img-fluid w-100 mb-3"/></a>
                              {% endif %}
                              {% if images %}
                                <div>
                                  {% for image in images %}
                                    <a href="{{ image.popup }}" title="{{ heading_title }}"><img src="{{ image.thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" class="img-fluid"/></a>&nbsp;
                                  {% endfor %}
                                </div>
                              {% endif %}
                            </div>
                        {% endif %}
                          <div class="wishlist_btns">
                              <form method="post" data-oc-toggle="ajax">
                                  <button type="submit" formaction="{{ add_to_wishlist }}" data-bs-toggle="tooltip" class="btn wishlist_btn" title="{{ button_wishlist }}"><i class="fa-solid fa-heart"></i></button>
                                  <button type="submit" formaction="{{ add_to_compare }}" data-bs-toggle="tooltip" class="btn btn-light d-none" title="{{ button_compare }}"><i class="fa-solid fa-arrow-right-arrow-left"></i></button>
                                  <input type="hidden" name="product_id" value="{{ product_id }}"/>
                              </form>
                          </div>
                      </div>
                  </div>
                <div class="col-lg-7">
                  <div class="product_main_info mt-lg-0 mt-4">
                      <div class="product_tags">
                          {% if tags %}
                              <p>
                                  {% for tag in tags %}
                                      <a href="{{ tag.href }}">{{ tag.tag }}</a>{% if not loop.last %} &nbsp;&nbsp;|&nbsp;&nbsp; {% endif %}
                                  {% endfor %}
                              </p>
                          {% endif %}
                      </div>
                      <h1>{{ heading_title }}</h1>
                      {% if review_status %}
                      <div class="rating review_option">
                          <p>
                              {% for i in 1..5 %}
                                  {% if rating < i %}
                                  <span class="fa-stack"><i class="fa-regular fa-star fa-stack-1x"></i></span>
                              {% else %}
                                  <span class="fa-stack"><i class="fa-solid fa-star fa-stack-1x"></i><i class="fa-regular fa-star fa-stack-1x"></i></span>
                              {% endif %}
                              {% endfor %}
                              <a href="" class="review_option" onclick="$('a[href=\'#tab-review\']').tab('show'); $('a[href=\'#tab-review\']').tab('show'); $('html,body').animate({ scrollTop: $('a[href=\'#tab-review\']').offset().top}); return false;">({{ text_reviews }})</a></a>
                          </p>
                      </div>
                      {% endif %}
                      <ul class="list-unstyled m-0">
                          {% if manufacturer %}
                              <li>{{ text_manufacturer }} <a href="{{ manufacturers }}">{{ manufacturer }}</a></li>
                          {% endif %}
