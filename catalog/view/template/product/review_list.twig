<div class="mb-3">
  {% if reviews %}
    {% for review in reviews %}
      <div class="review_list">
        <div class="d-flex align-items-center mb-1">
          <h4>{{ review.author }} | {{ review.date_added }} </h4>
          <div class="rating ms-3">
            {% for i in 1..5 %}
              {% if review.rating < i %}
                <span class="fa-stack"><i class="fa-regular fa-star fa-stack-1x"></i></span>
              {% else %}
                <span class="fa-stack"><i class="fa-solid fa-star fa-stack-1x"></i><i class="fa-regular fa-star fa-stack-1x"></i></span>
              {% endif %}
            {% endfor %}
          </div>
        </div>
        <p class="readmore">"{{ review.text }}"</p>
      </div>
    {% endfor %}
    <div class="text-end">{{ pagination }}</div>
  {% else %}
    <p class="text-center">{{ text_no_results }}</p>
  {% endif %}
</div>
<style>
    .read-more-link,
    .read-less-link {
        color: var(--success);
        text-decoration: none;
    }
</style>
<script>
    $(function () {
        $(".readmore").moreLess({
            moreLabel: "... Read more",
            lessLabel: "... Read less",
            moreClass: "read-more-link",
            lessClass: "read-less-link",
            wordsCount: 50,
        });
    });
</script>