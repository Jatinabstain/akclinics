<div class="product-thumb">
  <div class="image">
      <a href="{{ href }}"><img src="{{ thumb }}" alt="{{ name }}" title="{{ name }}" class="img-fluid"/></a>
  </div>
  <div class="content">
    <div class="description">
      <h4><a href="{{ href }}">{{ name }}</a></h4>
        <div class="thumb_description">
            <p class="mb-0 text-center">{{ description }}</p>
        </div>
        {% if review_status and rating %}
            <div class="rating text-center">
                {% for i in 1..5 %}
                    {% if rating < i %}
                        <span class="fa-stack"><i class="fa-regular fa-star fa-stack-1x"></i></span>
                    {% else %}
                        <span class="fa-stack"><i class="fa-solid fa-star fa-stack-1x"></i><i class="fa-regular fa-star fa-stack-1x"></i></span>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}
      {% if price %}
        <div class="price text-center">
          {% if not special %}
            <span class="price-new">{{ price }}</span>
          {% else %}
              <p><span class="price-old">MRP: {{ price }}</span> <span class="price-new">{{ special }}</span></p>
          {% endif %}
          {% if tax %}
{#            <span class="price-tax">{{ text_tax }} {{ tax }}</span>#}
          {% endif %}
        </div>
      {% endif %}
        <div class="thumb_wishlist">
            <form method="post" data-oc-toggle="ajax" data-oc-load="{{ cart }}" data-oc-target="#header-cart">
                <button type="submit" class="btn wishlist_btn" formaction="{{ add_to_wishlist }}" data-bs-toggle="tooltip" title="{{ button_wishlist }}"><i class="fa-solid fa-heart"></i></button>
            </form>
        </div>
        <form method="post" data-oc-toggle="ajax" data-oc-load="{{ cart }}" data-oc-target="#header-cart">
          <div>
            <button type="submit" formaction="{{ add_to_cart }}" class="btn btn_primary_outline mx-auto d-block mt-2">{{ button_cart }}</button>
              {# <button type="submit" formaction="{{ add_to_wishlist }}" data-bs-toggle="tooltip" title="{{ button_wishlist }}"><i class="fa-solid fa-heart"></i></button>#}
              {# <button type="submit" formaction="{{ add_to_compare }}" data-bs-toggle="tooltip" title="{{ button_compare }}"><i class="fa-solid fa-arrow-right-arrow-left"></i></button>#}
          </div>
          <input type="hidden" name="product_id" value="{{ product_id }}"/> <input type="hidden" name="quantity" value="{{ minimum }}"/>
        </form>
    </div>
  </div>
</div>