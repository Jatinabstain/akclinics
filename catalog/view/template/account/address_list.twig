{% if addresses %}
  <div class="table-responsive">
    <table class="table table-bordered">
      {% for address in addresses %}
        <tr>
          <td class="text-start">{{ address.address }}</td>
          <td class="text-end">
              <div class="mt-3">
                  <a href="{{ address.edit }}" data-bs-toggle="tooltip" title="{{ button_edit }}" class="btn btn_primary  d-inline"><i class="bi bi-pencil-square"></i></a>
                  <a href="{{ address.delete }}" data-bs-toggle="tooltip" title="{{ button_delete }}" class="btn btn_dark d-inline"><i class="bi bi-trash3"></i></a>
              </div>
          </td>
        </tr>
      {% endfor %}
    </table>
  </div>
{% else %}
  <p>{{ text_no_results }}</p>
{% endif %}