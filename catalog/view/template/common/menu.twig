<ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center">
    {% if informations %}
        {% for information in informations %}
            {% if information.children %}
                <li class="nav-item dropdown"><a {% if information['external'] %} target="_blank"{% endif %} href="#" class="nav-link nav_link dropdown-toggle" data-bs-toggle="dropdown">{{ information.title }}</a>
                    <div class="dropdown-menu">
                        <div class="dropdown-inner">
                            <ul class="list-unstyled">
                            {% for child in information.children %}
                                <li><a {% if child.external %} target="_blank"{% endif %} href="{{ child.href }}" class="nav-link text-nowrap">{{ child.title }}</a></li>
                            {% endfor %}
                            </ul>
                        </div>
                    </div>
                </li>
            {% else %}
                <li class="nav-item">
                    <a href="{{ information['href'] }}" class="nav-link nav_link"{% if information['external'] %} target="_blank"{% endif %}>{{ information['title'] }}</a>
                </li>
            {% endif %}

        {% endfor %}
    {% endif %}
